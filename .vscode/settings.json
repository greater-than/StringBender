{
  "workbench.editor.enablePreview": true,
  "editor.minimap.enabled": false,
  "pylint.cwd": "${workspaceFolder}",
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.rulers": [
    120
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "pylint.ignorePatterns": [
    "${workspaceFolder}/.venv/*",
  ],
  "pylint.path": [
    "${workspaceFolder}/.venv/bin/pylint"
  ],
  "pylint.args": [
    "--load-plugins",
    "pylint_pydantic"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "deepIndent",
    "editor.wordWrapColumn": 80
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.wordWrapColumn": 80
  },
  "yaml.schemas": {
    "https://raw.githubusercontent.com/jsonresume/resume-schema/v1.0.0/schema.json": "untitled:Untitled-1"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  },
  "eslint.format.enable": true,
  "makefile.configureOnOpen": false,
  "autoDocstring.docstringFormat": "google",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.extraPaths": [
    "./src",
    "./tests",
  ],
  "python.autoComplete.extraPaths": [
    "./src",
    "./tests",
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  "python.REPL.enableREPLSmartSend": false,
  "editor.defaultFormatter": "ms-python.black-formatter",
  "black-formatter.args": [
    "--line-length",
    "120"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "editor.detectIndentation": false,
  "editor.semanticHighlighting.enabled": true,
  "[markdown]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "ms-vscode.makefile-tools",
  },
  "flake8.args": [
    "--max-line-length",
    "120",
    "--inline-quotes",
    "double",
    "--exclude",
    ".venv"
  ],
  "python.testing.pytestArgs": [
    "test"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "cSpell.words": [
    "endregion",
    "fillchar",
    "gitversion",
    "greaterthan",
    "isort",
    "keepends",
    "maxsplit",
    "mypy",
    "nosetests",
    "pipelayer",
    "pydantic",
    "pytest",
    "stringbender",
    "venv"
  ],
}